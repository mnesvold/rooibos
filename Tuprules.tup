ROOT = $(TUP_CWD)
BIN = $(ROOT)/tools/bin

CXX = $(BIN)/clang++
CXXFLAGS = @(CXXFLAGS)
CXXFLAGS += -fcolor-diagnostics
CXXFLAGS += -Wall -Werror -pedantic
CXXFLAGS += -std=c++11
!cxx = |> $(CXX) -c -o %o $(CXXFLAGS) %f |> %f.o

LINK = $(CXX)
LINKDIRS =
LINKLIBS =
!link = |> $(LINK) -o %o $(LINKDIRS) %f $(LINKLIBS) |>
